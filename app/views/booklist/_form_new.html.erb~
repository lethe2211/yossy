<% if @booklist.errors.any? %>
<% @booklist.errors.full_messages.each do |msg| %>
<div class="alert">
  <% if @booklist.errors.count == 1 %>
  <%= render :text => @booklist.errors.count.to_s + " error" %>
  <% else %>
  <%= render :text => @booklist.errors.count.to_s + " errors" %>
  <% end %>
  <ul>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

